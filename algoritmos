void retirada (){
   
   textbackground(4);
   textcolor(15);
   system("cls");
   tela(10,7,80,25,7,4);
   
   char loc1[100] = {"DELEGACIA DA MULHER"};
   char loc2[100] = {"Secretaria da Mulher"};
   char loc3[100] = {"CRAMMM"};
   char end1[200] = {"Avenida Julio Meneguetti,195"};
   char end2[200] = {"Av. Papa João XXIII,497"};
   char end3[200] = {"Rua Vaz Caminha, 160"};
   int tel1 = {32202500};
   int tel2 = {32938350};
   int tel3 = {39018828};
   
   gotoxy(11,9); printf("        NOME                   RUA                      TELEFONE");
   gotoxy(11,10); printf(" %s   %s     %d", loc1, end1, tel1);
   
   gotoxy(11,14); printf("        NOME                   RUA                      TELEFONE");
   gotoxy(11,15); printf(" %s      %s      %d", loc2, end2, tel2);
   
   gotoxy(11,18); printf("        NOME                   RUA                      TELEFONE");
   gotoxy(11,19); printf("       %s             %s          %d", loc3, end3, tel3);
      
   parada=getch();    
}
