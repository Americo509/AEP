   gotoxy(15,19); printf("Cpf do marido: %s",c.cpfd);
   gotoxy(15,21); printf("Data de nascimento do marido: %s",c.datad);
   gotoxy(15,23); printf("Sua rua é: %s",c.rua);
   
   parada=getch();              
}
