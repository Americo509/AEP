void menu2(){ 
int op=1; 
char tecla;
do{ 
   
   textbackground(4);
   textcolor(15);
   
   system("cls");
   tela(10,3,50,25,7,4);
   
   textcolor(0);
   textbackground(15);
    gotoxy(13,7);printf(" D D o n (Disk DenÃºncia On Line) ");
    textbackground(4);
    
    gotoxy(14,10);printf("  ____    ____                  ");
    gotoxy(14,11);printf(" |  _  ) |  _  )  ____   _    _  ");
    gotoxy(14,12);printf(" | | | | | | | | | __ | | \  | | ");
    gotoxy(14,13);printf(" | | | | | | | | ||  || | |\ | | ");
    gotoxy(14,14);printf(" | |_| | | |_| | ||__|| | | \| | ");
    gotoxy(14,15);printf(" |____/  |____/  |____| |_|  \_| ");
           
   textcolor(15);
   textbackground(4);
      
  gotoxy(13,19); printf("cadastrar dados ");
  gotoxy(13,21); printf(" proximo ");
  
  textcolor(15);
   textbackground(0);
    switch (op){
           case 1:
          gotoxy(13,19); printf("cadastrar dados ");
          break;
          
          case 2:
          gotoxy(13,21); printf(" proximo ");       
          break;
      }        
   
          tecla=getch();            
    if (tecla<0)
      tecla=getch();
          
    switch (tecla){
       case 72:  
         if (op-1>=1)
             op--; 
             else
             op=2;
         break;    
       case 80: 
         if (op+1<=2)
             op++;
             else
             op=1;
         break;
       case 13: 
       
         textbackground(4);
         switch (op){
                case 1:
                     system("cls");
                     tela(10,7,80,25,7,4);
                     cadastro(); 
                 break;
                 
            case 2:            
                tecla=13; 
                 break;                                                              
}
break;              
}
}
while (tecla!=13);
}  
//-----------------------------------------------------------------------------
int main(){
  setlocale(LC_ALL,"portuguese");	

  CONSOLE_CURSOR_INFO cursor = {1,FALSE};
  SetConsoleCursorInfo(GetStdHandle(STD_OUTPUT_HANDLE), &cursor);
  
  menu2();
  menu();
 
  return(0);
}
