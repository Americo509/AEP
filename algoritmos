//-----------------------------------------------------------------------------   
void menu(){ 
int op=1; 
char tecla;
 do{ 
      
   textcolor(15);
   textbackground(4);
   
   system("cls");
   tela(10,7,80,25,7,4);
   
   textcolor(0);
   textbackground(15);
   
    gotoxy(13,7);printf(" D D o n (Disk Denúncia Online)");
    
    textbackground(4);
    
    gotoxy(25,9);printf("   _     ______                       _");
    gotoxy(25,10);printf(" |_|   |  ____|                     | |");
    gotoxy(25,11);printf("  _    | |___    ____    ____       | |");
    gotoxy(25,12);printf(" | |   |  ___|  | __ |  | __ |   ___| |");
    gotoxy(25,13);printf(" | |   | |      ||  ||  ||  ||  |  _  |");
    gotoxy(25,14);printf(" | |   | |      ||__||  ||__||  | |_| |");
    gotoxy(25,15);printf(" |_|   |_|      |____|  |____|  |_____|");

   textcolor(15);
   textbackground(4);
   
   gotoxy(15,18); printf(" Seus Pedidos  ");
   gotoxy(15,19); printf(" Lugares para Retirada  ");
   gotoxy(15,20); printf(" dados cadastrados  ");
   gotoxy(15,21); printf(" Créditos  ");
   gotoxy(65,22); printf(" Sair  ");
      
   textcolor(15);
   textbackground(0);
      
   switch (op){
      case 1:
         gotoxy(15,18); printf(" Seus Pedidos  ");      
         break; 
      case 2:
         gotoxy(15,19); printf(" Lugares para Retirada  ");      
         break; 
      case 3:
         gotoxy(15,20); printf(" dados cadastrados  ");      
         break; 
      case 4:
         gotoxy(15,21); printf(" Créditos  ");      
         break; 
      case 5:
         gotoxy(65,22); printf(" Sair  ");      
         break;           
}       
    tecla=getch();  
    if (tecla<0)
      tecla=getch();
          
    switch (tecla){
       case 72:  
         if (op-1>=1)
             op--; 
             else
             op=5;
         break;    
       case 80:  
         if (op+1<=5)
             op++;
             else
             op=1;
         break;
       case 13: 
         switch (op){
                
            case 1:
                 pedidos();   
                 break;
                 
            case 2:            
                 retirada();
                 break;
                 
            case 3:                 
                 dadoscad();
                 break;
                 
            case 4:
                 creditos();
                 break;
                 
            case 5:
                 tecla=27; 
                 break;                    
                }                             
         break;                           
    }  
  } 
  while (tecla!=27);  
}  
