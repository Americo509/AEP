char parada, mail[200];

//----------------------------------------------------------------------------
struct cadastro{

       char nome[200], nomed[200], rua[1000];
       int cel[20], cpf[20], data[20], cpfd[20], datad[20], rnum[5]; 
};
struct cadastro c;
//----------------------------------------------------------------------------
void tela(int ci, int li, int cf, int lf, int corL, int corF){
int i;    
    textcolor(0);
    textbackground(15);
    
    for (i=ci;i<=cf;i++){ 
        gotoxy(i,li);  
        printf("%c",95);
        gotoxy(i,lf); 
        printf("%c",95);
        }
    for (i=li;i<=lf;i++){ 
        gotoxy(ci,i); printf("%c",124);
        gotoxy(cf,i); printf("%c",124);
       }   
    gotoxy(ci,li);  printf("%c",160);
    gotoxy(cf,li);  printf("%c",160);
    gotoxy(ci,lf);  printf("%c",124);
    gotoxy(cf,lf);  printf("%c",124);
    
    gotoxy(ci+2,li);
    textcolor(15);
    textbackground(4);   
}
//-----------------------------------------------------------------------------       
void cadastro(){
   
    textcolor(15);
   textbackground(4);
   system("cls");
   tela(10,7,80,25,7,4);
   
   textcolor(0);
   textbackground(15);
   
   gotoxy(13,7);printf(" Cadastrando Dados ");
   
   textcolor(15);
   textbackground(4);
   
   gotoxy(15,10);printf("Escreva seu nome\n");
   gotoxy(15,11);printf("->  ");
   fgets(c.nome, 200, stdin);
   
   gotoxy(15,12);printf("Escreva seu celular com ddd\n");
   gotoxy(15,13);printf("->  ");
   scanf("%s", &c.cel);
   fflush(stdin);
   
   gotoxy(15,14);printf("Escreva seu CPF\n");
   gotoxy(15,15);printf("->  ");
   scanf("%s", &c.cpf);
   fflush(stdin);  
   
   gotoxy(15,16);printf("Escreva sua data de nascimento\n");
   gotoxy(15,17);printf("->  ");
   scanf("%s", &c.data);
   fflush(stdin);
   
   system("cls");
   tela(10,7,80,25,7,4);
   
   gotoxy(15,10);printf("Escreva o nome dele\n");
   gotoxy(15,11);printf("->  ");
   fgets(c.nomed, 200, stdin);
   
   gotoxy(15,12);printf("Escreva o CPF dele\n");
   gotoxy(15,13);printf("->  ");
   scanf("%s", &c.cpfd);
   fflush(stdin);
   
   gotoxy(15,14);printf("Escreva a data de nascimento dele\n");
   gotoxy(15,15);printf("->  ");
   scanf("%s", &c.datad);
   fflush(stdin);
   
   system("cls");
   tela(10,7,80,25,7,4);
   
   gotoxy(15,10);printf("Escreva nome da rua com o numero da casa\n");
   gotoxy(15,11);printf("->  ");
   fgets(c.rua, 1000, stdin);
   
   parada=getch();   
}
//-----------------------------------------------------------------------------   
void pedidos (){
 int op=1, x; 
 char tecla;  
  do{ 
   
   textbackground(4);
   textcolor(15);
   
   system("cls");
   tela(10,7,80,25,7,4);
   
   
   textcolor(0);
   textbackground(15);
     
    gotoxy(27,10);      printf (" 1 ");         
    gotoxy(20,11); printf(" pizza de peperoni ");
    gotoxy(57,10);      printf (" 2 ");
    gotoxy(50,11); printf(" pizza de mussarela ");
    
    gotoxy(19,13); printf (" essa pizza informa  ");         
    gotoxy(17,14); printf(" a policia uma violencia ");
    gotoxy(23,15); printf(" domestica ");
    gotoxy(49,13); printf (" essa pizza informa ");
    gotoxy(47,14); printf(" a policia uma violencia ");
    gotoxy(52,15); printf(" no trabalho ");
     
     
    textcolor(0);
   textbackground(15);
    
   gotoxy(30,21); printf("escolha sua pizza: ");
   scanf("%d", &x);
   if (x == 1){
      switch (op){
           case 1:
                gotoxy(48,21); printf(" peperoni ");
                system("cls");
                tela(10,7,80,25,7,4);
                textbackground(4);
                textcolor(15);
                                  
                gotoxy(28,14);printf("sua denuncia foi computada");
                gotoxy(28,15);printf("como violencia domestica");
                gotoxy(28,16);printf("estamos enviando uma viatura");
                gotoxy(28,17);printf("até sua residencia");
                textbackground(4);
                textcolor(15);
                gotoxy(70,23);printf("voltar");  
          break;
      }
   }            
   else {
        x == 2; 
       switch (op){
              case 1:
                   gotoxy(48,21); printf(" mussarela "); 
                   system("cls");
                   tela(10,7,80,25,7,4);
                   textbackground(4);
                   textcolor(15);
                   gotoxy(28,14);printf(" sua denuncia foi computada ");
                   gotoxy(28,15);printf(" como violencia no trabalho ");
                   gotoxy(28,16);printf(" faremos o boletim e enviaremos ");
                   gotoxy(28,17);printf(" uma viatura para seu local ");
                   gotoxy(28,18);printf(" de trabalho ");
                   textbackground(4);
                   textcolor(15);
                   gotoxy(70,23);printf("voltar");       
                   break; 
       }
   }        
      
          tecla=getch();            
    if (tecla<0)
      tecla=getch();
          
    switch (tecla){
       case 72:  
         if (op-1>=1)
             op--; 
             else
             op=2;
         break;    
       case 80:  
         if (op+1<=2)
             op++;
             else
             op=1;
         break;
       case 13: 
       
         textbackground(4);
         
parada=getch();
break;              
}
}
while (tecla!=13);
}
